/***********************************************
    2. Panels
************************************************/
.app-panel > .app-panel-heading > .app-panel-title > .app-panel-header {
    color: #ef6f00; 
    font-size: 24px;
    font-weight: normal;
}

.app-panel > .app-panel-heading {
    background: white;
    background-color: white;
    height: 60px;
    padding-left: 20px;
    border-bottom: none;
}

.app-panel > .app-panel-heading > .app-panel-title {
    padding-top: 10px;
    padding-left: 10px;
    padding-right: 10px;
}

.app-panel > .panel-body {
    border: 0;
    padding-top: 0px;
}

/***********************************************
    3. Accordion
************************************************/

.app-accordion .app-accordion-header {
    color: #ef6f00; 
    font-size: 24px;
    font-weight: normal;
}

.app-accordion .app-accordion-open-icon {
    color: #ef6f00;
}

.app-accordion > .panel-group > .panel > .panel-heading {
    background: white;
    background-color: white;
    height: 60px;
    padding-left: 20px;
    cursor: pointer;
}

.app-accordion > .panel-group > .panel > .panel-heading > .panel-title {
    padding-top: 10px;
    padding-left: 10px;
    padding-right: 10px;
}

.app-accordion .panel-default > .panel-heading + .panel-collapse > .panel-body {
    border: 0;
    padding-top: 0px;
}