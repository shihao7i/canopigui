<div class="row">
    <div class="col-md-12 col-lg-12">

        <!-- BREADCRUMBS - We can setup with Angular $location -->
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-body">
                    <ol class="breadcrumb">
                        <li><a href="#"><i class="fa fa-home fa-lg"></i>&nbsp;&nbsp;&nbsp;Home</a></li>
                        <li class="active">Activity Search</li>
                    </ol>
                </div>
            </div>
        </div>

        <div class="row">
            <accordion class="app-accordion">
                <accordion-group is-open="activitysearch.searchAccordionOpen">
                    <accordion-heading>
                        <span class="app-accordion-header">Activity Search</span>
                        <i class="pull-right glyphicon app-accordion-open-icon" ng-class="{'glyphicon-chevron-up': activitysearch.searchAccordionOpen, 'glyphicon-chevron-down': !activitysearch.searchAccordionOpen}"></i>
                    </accordion-heading>

                    <div style="border-bottom: solid; border-width: 1px; margin-bottom: 20px; color: #9C9C9C; margin-left: 15px; margin-right: 15px;"></div>

                    <div class="row" style="padding-left: 15px; padding-right: 15px;"> 
                        <div class="col-md-3">
                            <div class="form-group">
                                <div class="canopi-input-title">User ID: </div> 
                                <input type="text" class="form-control ng-pristine ng-valid ng-touched" ng-model="tasks.taskCode" placeholder="Type and Search">  
                            </div>
                        </div>
                        <div class="col-md-3">
                            <form>
                                <div class="canopi-input-title">Activity Type: </div>
                                <div class="form-group">
                                    <div class="dropdown">
                                        <select 
                                                 ng-model="activitysearch.activityType" ng-options="t.name for t in ::activitysearch.activityTypes"
                                                class="dropdown-select form-control"
                                                title="Please select" data-live-search="true">
                                        </select>
                                    </div>
                                </div>
                            </form>
                        </div>  
                        <div class="col-md-3">
                            <div class="form-group">
                                <div class="canopi-input-title">From Date:</div> 
                                <p class="input-group">
                                    <input type="text" class="form-control" datepicker-popup="{{format}}" ng-model="dt" is-open="openedFromDate" min-date="minDate" max-date="'2015-06-22'" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" ng-required="true" close-text="Close" />
                                    <span class="input-group-btn">
                                        <button type="button" class="btn btn-default" ng-click="activitysearch.openActivitiesFromDate($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                                    </span>
                                </p> 
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <div class="canopi-input-title">To Date:</div> 
                                <p class="input-group">
                                    <input type="text" class="form-control" datepicker-popup="{{format}}" ng-model="dt" is-open="openedToDate" min-date="minDate" max-date="'2015-06-22'" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" ng-required="true" close-text="Close" />
                                    <span class="input-group-btn">
                                        <button type="button" class="btn btn-default" ng-click="activitysearch.openActivitiesToDate($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Search/Clear Buttons -->
                    <div class="row" style="padding-left: 15px; padding-right: 15px; padding-top: 5px;">
                        <div class="col-md-12" style="text-align: right;">
                            <button href='#' class='btn canopi-btn-blue'  ng-disabled="activitysearch.searchButtonDisabled" ng-click="activitysearch.activitySearch()">Search</button>
                            <button href='#' class='btn canopi-btn-gray'  ng-disabled="activitysearch.clearButtonDisabled" ng-click="activitysearch.clear()">Clear</button>
                        </div>
                    </div>

                </accordion-group>
            </accordion>
        </div>

        <!-- Activity Results -->
        <div class="row" ng-show="activitysearch.displayActivitesResults">
            <div class="panel panel-default app-panel">
                <div class="panel-heading app-panel-heading">
                    <div class="app-panel-title">
                        <span class="app-panel-header">Search Results</span>
                        <form class="form-inline" style="display: inline; padding-left: 5px;">
                            <div class="form-group">
                                <input class="form-control" style="margin-top: -8px;" type="text"
                                       ng-model="activitysearch.ruleCategoryFilter"
                                       ng-model-options="{debounce: 300}"
                                       ng-change="activitysearch.refreshData(activitysearch.ruleCategoryFilter)"
                                       placeholder="Search"/>
                            </div>
                            <div class="form-group" style="margin-left: 10px; margin-top: -8px;">
                                <div><span style="color: #777;">Activity Type: Type 1</span></div>              
                            </div>
                            <div class="form-group pull-right" style="margin-top: 3px; padding-right: 10px;">
                                <div class="btn-group btn-group-sm">                                        
                                    <button class="btn btn-success"
                                            ng-click="activitysearch.export()"><i class="fa fa-fw fa-file-excel-o"></i> Export
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row canopi-inputfields" style="padding-left: 20px; padding-right: 20px;">
                        <div style="border-bottom: solid; border-width: 1px; color: #9C9C9C; margin-left: 15px; margin-right: 15px; margin-bottom: 15px;"></div>

                        <div class="col-md-12">

                            <!--Grid-->
                            <div class="ruleAdminUIGrid" ui-grid="activitysearch.gridOptionsActivityResultsTable" ui-grid-save-state ui-grid-exporter ui-grid-selection ui-grid-auto-resize ui-grid-edit ui-grid-row-edit ui-grid-cellNav ui-grid-resize-columns></div>

                        </div>
                    </div>
                </div>
                <!-- panel-body -->
            </div>
            <!-- panel -->
        </div>

    </div>
    <!-- col-md-12 -->
</div> <!-- row -->


