                vm.gridOptions.columnDefs[11].visible = false;
                vm.gridOptions.columnDefs[12].visible = false;            
            }
            else{
                vm.gridOptions.columnDefs[10].visible = true;
                vm.gridOptions.columnDefs[11].visible = true;
                vm.gridOptions.columnDefs[12].visible = true;
            }
            
            vm.gridApi.core.refresh();
            
        };
        
