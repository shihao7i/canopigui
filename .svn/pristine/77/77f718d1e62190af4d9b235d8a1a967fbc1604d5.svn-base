<div class="row">
    <div class="panel panel-default app-panel">
        <div class="panel-heading app-panel-heading">
            <div class="app-panel-title">
                <span class="app-panel-header">New Workorder Template Details</span>
            </div>
        </div>
        
        <div class="panel-body">

            <div class="row" style="padding-left: 15px; padding-right: 15px;">

                <div class="col-md-12">
                    <div style="border-bottom: solid; border-width: 1px; color: #9C9C9C; margin-bottom: 20px;"></div>
                    
                    <div class="panel-heading sub-panel-heading" style="padding-top: 20px;">
                        <div class="sub-panel-title">
                            <span class="sub-panel-header">New Task List</span>
                            <form class="form-inline" style="display: inline; padding-left: 5px;">
                                <div class="form-group pull-right" style="margin-top: 3px; padding-right: 10px; margin-right: 85px;">
                                    <div class="btn-group btn-group-sm">                                        
                                        <button class="btn btn-success"
                                            ng-click="mobilityorders.newTasklist.export()"><i class="fa fa-fw fa-file-excel-o"></i> Export
                                        </button>
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <button class='btn btn-orange '
                                            ng-disabled="true" 
                                            ng-click="mobilityorders.newTasklist.saveTasks()">
                                            <i class="fa fa-floppy-o"></i> Save
                                        </button>
                                        <button class="btn app-btn-dark"
                                            ng-disabled="true"
                                            ng-click="mobilityorders.newTasklist.cancel()">
                                            <i class="fa fa-undo"></i> Undo
                                        </button>
                                    </div>
                                    <div class="btn-group btn-group-sm" dropdown>
                                        <button type="button" ng-disabled="mobilityorders.isEditing" class="btn btn-primary dropdown-toggle" dropdown-toggle>
                                            <i class="fa fa-gears"></i> Actions <span class="caret"></span>
                                        </button>                                        
                                        <ul class="dropdown-menu" role="menu">
                                            <li ng-click="mobilityorders.newTasklist.addTask()" data-toggle="modal" data-target="#addTaskModal"><a href="#"><i class="fa fa-fw fa-plus-circle"></i> Add Task To Template</a></li>
                                            <li ng-class="{disabled: !mobilityorders.selectedRowTaskList}" ng-click="mobilityorders.newTasklist.removeTask()"><a href="#"><i class="fa fa-fw fa-minus-circle"></i> Remove Task From Template</a></li>
                                            
                                            <li ng-click="mobilityorders.newTasklist.recalcTaskSequence()"><a href="#"><i class="fa fa-fw fa-sliders"></i> Recalculate Sequence</a></li>
                                            
                                        </ul>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-11">
                            <div  ui-grid="mobilityorders.gridOptionsNewTaskListTable" 
                                  ui-grid-exporter ui-grid-cellNav ui-grid-edit ui-grid-row-edit ui-grid-selection 
                                  ui-grid-resize-columns ui-grid-auto-resize class="mobilityordersTaskListTable"></div>
                        </div>
                        <div class="col-md-1">
                            <div class="btn-group-vertical" role="group" aria-label="Vertical button group" style="margin-top: 90px; text-align: center;">
                                <p style="font-size: 14px; font-weight: bold">Modify Sequence</p>
                                <div>
                                    <button type="button" class="btn btn-default" ng-click="mobilityorders.newTasklist.moveSelectedUp()" ng-disabled="mobilityorders.firstElement"><i class="fa fa-arrow-up"></i></button>
                                    <button type="button" class="btn btn-default" ng-click="mobilityorders.newTasklist.moveSelectedDown()" ng-disabled="mobilityorders.lastElement"><i class="fa fa-arrow-down"></i></button>
                                </div>                             
                            </div>
                        </div>
                    </div>
                    
                    <div class="panel-heading sub-panel-heading" style="padding-top: 20px;">
                        <div class="sub-panel-title">
                            <span class="sub-panel-header">Dynamic Workorder Attributes</span>
                            <form class="form-inline" style="display: inline; padding-left: 5px;">
                                <div class="form-group pull-right" style="margin-top: 3px;">
                                    <div class="btn-group btn-group-sm">                                        
                                        <button class="btn btn-success"
                                            ng-click="mobilityorders.newUda.export()"><i class="fa fa-fw fa-file-excel-o"></i> Export
                                        </button>
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <button class='btn btn-orange '
                                            ng-disabled="true" 
                                            ng-click="mobilityorders.newUda.SaveUDA()">
                                            <i class="fa fa-floppy-o"></i> Save
                                        </button>
                                        <button class="btn app-btn-dark"
                                            ng-disabled="true"
                                            ng-click="mobilityorders.newUda.cencel()">
                                            <i class="fa fa-undo"></i> Undo
                                        </button>
                                    </div>
                                    <div class="btn-group btn-group-sm" dropdown>
                                        <button type="button" ng-disabled="mobilityorders.isEditing" class="btn btn-primary dropdown-toggle" dropdown-toggle>
                                            <i class="fa fa-gears"></i> Actions <span class="caret"></span>
                                        </button>                                        
                                        <ul class="dropdown-menu" role="menu">
                                            <li ng-click="mobilityorders.newUda.addUDA()"><a href="#"><i class="fa fa-fw fa-plus-circle"></i> Add UDA To Template</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>   

                    <div class="row">
                        <div class="col-md-12">
                            <div  ui-grid="mobilityorders.gridOptionsNewUDATable" 
                                  ui-grid-exporter ui-grid-cellNav ui-grid-edit ui-grid-row-edit ui-grid-selection ui-grid-resize-columns ui-grid-auto-resize class="UDATableUIGrid"></div>
                        </div> 
                    </div>

                    
                    <div class="panel-heading sub-panel-heading" style="padding-top: 20px;">
                        <div class="sub-panel-title">
                            <span class="sub-panel-header">Links</span>
                            <form class="form-inline" style="display: inline; padding-left: 5px;">
                                <div class="form-group pull-right" style="margin-top: 3px;">
                                    <div class="btn-group btn-group-sm">                                        
                                        <button class="btn btn-success"
                                            ng-click="mobilityorders.newLinks.export()"><i class="fa fa-fw fa-file-excel-o"></i> Export
                                        </button>
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <button class='btn btn-orange '
                                            ng-disabled="true" 
                                            ng-click="mobilityorders.newLinks.SaveLink()">
                                            <i class="fa fa-floppy-o"></i> Save
                                        </button>
                                        <button class="btn app-btn-dark"
                                            ng-disabled="true"
                                            ng-click="mobilityorders.newLinks.cencel()">
                                            <i class="fa fa-undo"></i> Undo
                                        </button>
                                    </div>
                                    <div class="btn-group btn-group-sm" dropdown>
                                        <button type="button" ng-disabled="mobilityorders.isEditing" class="btn btn-primary dropdown-toggle" dropdown-toggle>
                                            <i class="fa fa-gears"></i> Actions <span class="caret"></span>
                                        </button>                                        
                                        <ul class="dropdown-menu" role="menu">
                                            <li ng-click="mobilityorders.newLinks.addLink()"><a href="#"><i class="fa fa-fw fa-plus-circle"></i> Add Link</a></li>
                                            <li ng-click="mobilityorders.newLinks.removeLink()"><a href="#"><i class="fa fa-fw fa-minus-circle"></i> Remove Link</a></li>
                                        </ul>    
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>   

                    <div class="row">
                        <div class="col-md-12">
                            <div  ui-grid="mobilityorders.gridOptionsNewLinksTable" 
                                  ui-grid-exporter ui-grid-cellNav ui-grid-edit ui-grid-row-edit ui-grid-selection ui-grid-resize-columns ui-grid-auto-resize class="LinksTableUIGrid"></div>
                        </div> 
                    </div>
                    
                </div>
            </div>
            
        </div>
    </div>
</div>


<div ng-include="'app/admin-app/mobilityorders/views/addTaskModal.html'">
</div>	