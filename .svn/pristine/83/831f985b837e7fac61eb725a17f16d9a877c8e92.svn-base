angular.module('admin.service').service('OrderSearchService', ['$q', '$http', '$log', 'AdminGuiConstants', 
                              function ($q, $http,$log, AdminGuiConstants) {
	
	'use strict';
	
    var baseUrl = '/gui-canopi-js/src/app/admin-app/mock/mobilityorders/';
    
    if (!AdminGuiConstants.MOCK_DATA_FLAG)
    	baseUrl = '/canopigui/app/admin-app/mock/mobilityorders/';
    
    this.getPOTypes = function () {

            var deferred = $q.defer();
            $http.get(baseUrl + 'potypepicklist.json').success(function (response) {
                 deferred.resolve(response);
            });
       
            return deferred.promise; 
	};
        
	
	
    this.getWOTypes = function () {

        var deferred = $q.defer();
        $http.get(baseUrl + 'wotypepicklist.json').success(function (response) {
             deferred.resolve(response);
        });
   
        return deferred.promise; 
	};
        
	
	this.getPOSearchResults = function (poType) {

            var deferred = $q.defer();
            $http.get(baseUrl + poType + '.json').success(function (response) {
                 deferred.resolve(response);
            });
       
            return deferred.promise; 
	};
        
 	this.getWOSearchResults = function () {

            var deferred = $q.defer();
            $http.get(baseUrl + 'wosearchresults.json').success(function (response) {
                 deferred.resolve(response);
            });
       
            return deferred.promise; 
	};
        
        
        this.getUserDefinedAttributes = function () {

            var deferred = $q.defer();
            $http.get(baseUrl + 'uda.json').success(function (response) {
                 deferred.resolve(response);
            });
       
            return deferred.promise; 
	};

}]);
