<div class="container-fluid">
    <div class="row canopi-inputfields">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="form-group">
                <div class="canopi-input-title">Affilate:</div>
                <div class="dropdown">
                    <select class="dropdown-select form-control" disabled>
                    	<option>{{groupAffiliateOptions.selectedItems[0].affiliate | lowercase }}</option>
                    </select>
                </div>
            </div>

            <div class="form-group required">
                <div class="canopi-input-title">Group Name:</div>
                <input type="text" class="form-control" ng-model="groupAffiliateSelectedItems[0].name" ng-change="groupAffiliateSelectedItems[0].name = groupAffiliateSelectedItems[0].name.toUpperCase();" placeholder="" >
            </div>

            <div class="form-group">
                <label style="display:inline;">Description:</label>
                <textarea style="width: 100%; resize: none;" ng-model="groupAffiliateSelectedItems[0].description">{{groupAffiliateOptions.selectedItems[0].description}}</textarea>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="table-responsive" style="margin-bottom: 5px;">
        	<div class="col-lg-12 col-md-12 col-sm-12">
            	<div ng-grid="modifyGroupOptions" style="height: 220px !important;"></div>
            </div>
        </div> 
    </div>
</div>