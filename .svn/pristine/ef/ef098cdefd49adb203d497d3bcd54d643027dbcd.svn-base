                        <div class="col-md-4">
                            <form>
                        	<div class="form-group">
                                    <div class="canopi-input-title">Task Name:</div>
                                    <div class="input-group">
                                        <input type="text" class="form-control" ng-model="tasks.taskName" placeholder="Type and Search">
                                          <span class="input-group-btn">
                                            <button class="btn btn-default canopi-btn-sharp-corners" type="button"><i class="fa fa-search"></i></button>
                                          </span>
                                    </div><!-- /input-group -->
                                </div>

                            </form>
                        </div> 
                        
                        <div class="col-md-4">
                            <form>
                                 <div class="form-group">
                                        <div class="canopi-input-title">Task Type:</div>
                                        <div class="dropdown">
                                                <select ng-model="tasks.taskType" ng-options="t.name for t in ::tasks.taskTypes"
                                                    class="dropdown-select form-control"
                                                        title="Please select" data-live-search="false">
                                                </select>
                                        </div>
                                </div>

