<div class= "row">
    <div class="col-md-12 col-lg-12">
      
        <!-- BREADCRUMBS - We can setup with Angular $location -->
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-body">
                    <ol class="breadcrumb">
                        <li><a href="#"><i class="fa fa-home fa-lg"></i>&nbsp;&nbsp;&nbsp;Home</a></li>
                        <li class="active">Lookup & Pickup Lists</li>
                    </ol>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="panel panel-default app-panel">         
                <div class="panel-heading app-panel-heading">
                    <div class="app-panel-title">
                        <span class="app-panel-header">Lookup Search</span>
                    </div>
                </div>
                <div class="panel-body">         
                    <div class="row canopi-inputfields"  style="padding-left: 20px; padding-right: 20px;">
                        <div style="border-bottom: solid; border-width: 1px; color: #9C9C9C; margin-left: 15px; margin-right: 15px; margin-bottom: 15px;"></div>
                        <div class="col-lg-4 col-md-4">
                            <div class="form-group">
                                <div class="canopi-input-title">Lookup Type:</div>
                                <div class="dropdown">
                                    <select ng-model="lookupadmin.lookupType" ng-options="lookupType.name for lookupType in lookupadmin.lookupTypes", ng-change="lookupadmin.changeLookupType()"
                                            class="dropdown-select form-control"
                                            title="Please select" data-live-search="true">
                                    </select>
                                </div>
                            </div>							
                        </div>
                        <div class="col-lg-8 col-md-8">
                            <div ui-grid="lookupadmin.gridOptions" ui-grid-selection ui-grid-auto-resize ui-grid-edit ui-grid-row-edit ui-grid-cellNav ui-grid-resize-columns></div>
                            <button class="btn btn-primary" ng-click="lookupadmin.addItem()">Add Item</button>
                            <button class="btn btn-danger" ng-disabled="!lookupadmin.selectedRow" ng-click="lookupadmin.remove()">Remove</button>
                        </div>
                    </div>
                </div> <!-- panel-body -->
            </div> <!-- panel -->
        </div>
        
    </div> <!-- col-md-12 -->
</div> <!-- row -->

