<div class="row">
    <div class="col-md-12 col-lg-12">

        <!-- BREADCRUMBS - We can setup with Angular $location -->
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-body">
                    <ol class="breadcrumb">
                        <li><a href="#"><i class="fa fa-home fa-lg"></i>&nbsp;&nbsp;&nbsp;Home</a></li>
                        <li class="active">Rule Administration</li>
                    </ol>
                </div>
            </div>
        </div>
        <!-- Lookup Type -->
        <div class="row">
            <div class="panel panel-default app-panel">
                <div class="panel-heading app-panel-heading">
                    <div class="app-panel-title">
                        <span class="app-panel-header">Table Lookup</span>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row canopi-inputfields" style="padding-left: 20px; padding-right: 20px;">
                        <div style="border-bottom: solid; border-width: 1px; color: #9C9C9C; margin-left: 15px; margin-right: 15px; margin-bottom: 15px;"></div>
                        <div class="col-md-4">
                            <form>
                                <div class="canopi-input-title">Rule Category: </div>
                                <div class="form-group">
                                    <div class="dropdown">
                                        <select ng-model="ruleadmin.ruleCategory"
                                                ng-options="ruleCategory.name for ruleCategory in ::ruleadmin.ruleCategories"
                                                ng-change="ruleadmin.changeRuleCategory()"
                                                class="dropdown-select form-control"
                                                title="Please select" data-live-search="true">
                                        </select>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
                <!-- panel-body -->
            </div>
            <!-- panel -->
        </div>
        <!-- Lookup Results -->
        <div class="row">
            <div class="panel panel-default app-panel">
                <div class="panel-heading app-panel-heading">
                    <div class="app-panel-title">
                        <span class="app-panel-header">Lookup Results</span>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row canopi-inputfields" style="padding-left: 20px; padding-right: 20px;">
                        <div style="border-bottom: solid; border-width: 1px; color: #9C9C9C; margin-left: 15px; margin-right: 15px; margin-bottom: 15px;"></div>

                        <div class="col-md-12">

                            <div class="row">
                                <div class="col-md-4">
                                </div>
                                <div class="col-md-8">

                                    <div class="row">
                                        <div class="col-md-10">
                                            <div class="form-group pull-right">
                                                <input class="form-control" type="text"
                                                       ng-model="ruleadmin.ruleCategoryFilter"
                                                       ng-model-options="{debounce: 300}"
                                                       ng-change="ruleadmin.refreshData(ruleadmin.ruleCategoryFilter)"
                                                       placeholder="Search"/>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <a class="btn btn-success pull-right" href="#"
                                               ng-click="ruleadmin.export()"><i class="fa fa-file-excel-o fa-lg"></i>
                                                Export</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="ruleAdminUIGrid" ui-grid="ruleadmin.gridOptions" ui-grid-exporter ui-grid-selection ui-grid-auto-resize ui-grid-edit ui-grid-row-edit ui-grid-cellNav ui-grid-resize-columns></div>
                            <button class="btn btn-primary" ng-click="ruleadmin.addItem()">Add Item</button>
                            <button class="btn btn-success" ng-disabled="!ruleadmin.selectedRow" ng-click="ruleadmin.addItem(ruleadmin.selectedRow)">Edit Item</button>

                            <button class="btn btn-danger" ng-disabled="!ruleadmin.selectedRow"
                                    ng-click="ruleadmin.remove()">Remove
                            </button>
                            <!--New buttons-->
                            <button href='javascript:void(0);' class='btn canopi-btn-gray'  ng-click="ruleadmin.insertEmptyRowTop()">New Row Top</button>
                            <button href='javascript:void(0);' class='btn canopi-btn-gray'  ng-click="ruleadmin.insertEmptyRowBottom()">New Row Bottom</button>
                            <button href='javascript:void(0);' class='btn canopi-btn-gray'  ng-click="ruleadmin.insertEmptyRowAtLocation()">New Row Here</button>
                            <button href='javascript:void(0);' class='btn canopi-btn-gray'  ng-click="ruleadmin.insertCopyAtLocation()">Copy Row</button>
                        </div>
                    </div>
                </div>
                <!-- panel-body -->
            </div>
            <!-- panel -->
        </div>
        
        <!--New Rule, Modify rule Form-->
        <div class="row">
            <div class="panel panel-default app-panel">
                <div class="panel-heading app-panel-heading">
                    <div class="app-panel-title">
                        <span class="app-panel-header">Add New Rule</span>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row canopi-inputfields" style="padding-left: 20px; padding-right: 20px;">
                        <div style="border-bottom: solid; border-width: 1px; color: #9C9C9C; margin-left: 15px; margin-right: 15px; margin-bottom: 15px;"></div>
                        <div class="col-md-4">
                            <form>
                                <div class="canopi-input-title">Rule Category: </div>
                                <div class="form-group">                                    
                                    <input type="text" class="form-control" ng-model="ruleadmin.addRuleCategory" placeholder="Enter here">
                                </div>
                                <div class="canopi-input-title">WO Description: </div>
                                <div class="form-group">                                    
                                    <input type="text" class="form-control" ng-model="ruleadmin.addRuleCategory" placeholder="Enter here">
                                </div>
                                <div class="canopi-input-title">Order Type: </div>
                                <div class="form-group">                                    
                                    <input type="text" class="form-control" ng-model="ruleadmin.addRuleCategory" placeholder="Enter here">
                                </div>
                                <div class="canopi-input-title">Carrier: </div>
                                <div class="form-group">                                    
                                    <input type="text" class="form-control" ng-model="ruleadmin.addRuleCategory" placeholder="Enter here">
                                </div>
                                <div class="canopi-input-title">Is Telco Partner: </div>
                                <div class="form-group">                                    
                                    <input type="text" class="form-control" ng-model="ruleadmin.addRuleCategory" placeholder="Enter here">
                                </div>
                            </form>
                        </div>
                        <div class="col-md-4">
                            <form>                                
                                <div class="canopi-input-title">Franchise Indicator: </div>
                                <div class="form-group">                                    
                                    <input type="text" class="form-control" ng-model="ruleadmin.addRuleCategory" placeholder="Enter here">
                                </div>
                                <div class="canopi-input-title">Device Vendor: </div>
                                <div class="form-group">                                    
                                    <input type="text" class="form-control" ng-model="ruleadmin.addRuleCategory" placeholder="Enter here">
                                </div>
                                <div class="canopi-input-title">First Cabinet: </div>
                                <div class="form-group">                                    
                                    <input type="text" class="form-control" ng-model="ruleadmin.addRuleCategory" placeholder="Enter here">
                                </div>
                                <div class="canopi-input-title">NODEB1 on Air: </div>
                                <div class="form-group">                                    
                                    <input type="text" class="form-control" ng-model="ruleadmin.addRuleCategory" placeholder="Enter here">
                                </div>
                                <div class="canopi-input-title">Traffic Type: </div>
                                <div class="form-group">                                    
                                    <input type="text" class="form-control" ng-model="ruleadmin.addRuleCategory" placeholder="Enter here">
                                </div>
                            </form>
                        </div>
                        <div class="col-md-4">
                            <form>
                                <div class="canopi-input-title">Cabinet Type: </div>
                                <div class="form-group">                                    
                                    <input type="text" class="form-control" ng-model="ruleadmin.addRuleCategory" placeholder="Enter here">
                                </div>
                                <div class="canopi-input-title">Is OEW: </div>
                                <div class="form-group">                                    
                                    <input type="text" class="form-control" ng-model="ruleadmin.addRuleCategory" placeholder="Enter here">
                                </div>
                                <div class="canopi-input-title">Is Shared UNI: </div>
                                <div class="form-group">                                    
                                    <input type="text" class="form-control" ng-model="ruleadmin.addRuleCategory" placeholder="Enter here">
                                </div>
                                <div class="canopi-input-title">Is Target NSB: </div>
                                <div class="form-group">                                    
                                    <input type="text" class="form-control" ng-model="ruleadmin.addRuleCategory" placeholder="Enter here">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- panel-body -->
            </div>
            <!-- panel -->
        </div>
        
    </div>
    <!-- col-md-12 -->
</div> <!-- row -->


