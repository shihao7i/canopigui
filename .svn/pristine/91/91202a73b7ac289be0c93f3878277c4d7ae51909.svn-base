<!-- Mobility Search Details -->
<div class="row">
    <div class="panel panel-default app-panel">
        <div class="panel-heading app-panel-heading">
            <div class="app-panel-title">
                <span class="app-panel-header">New Workorder Template</span>
            </div>
        </div>

        <div class="panel-body">

            <div class="row" style="padding-left: 15px; padding-right: 15px;">

                <div class="col-md-12">
                    <div style="border-bottom: solid; border-width: 1px; color: #9C9C9C; margin-bottom: 20px;"></div> 

                                       
                    <div class="panel-heading sub-panel-heading" style="padding-top: 20px;">
                        <div class="sub-panel-title">
                            <span class="sub-panel-header">PO Type: {{mobilityorders.poTypeMultiselectPickListOutput[0].name}}</span>
                            <form class="form-inline" style="display: inline; padding-left: 5px;">
                                <div class="form-group pull-right" style="margin-top: 3px;">
                                    <div class="btn-group btn-group-sm">                                        
                                        <button class="btn btn-success"
                                            ng-click="mobilityorders.newWOTemplate.export()"><i class="fa fa-fw fa-file-excel-o"></i> Export
                                        </button>
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <button class='btn btn-orange '
                                            ng-disabled="true" 
                                            ng-click="mobilityorders.newWOTemplate.SaveNewWOTemplate()">
                                            <i class="fa fa-floppy-o"></i> Save
                                        </button>
                                        <button class="btn app-btn-dark"
                                            ng-disabled="true"
                                            ng-click="mobilityorders.newWOTemplate.cencel()">
                                            <i class="fa fa-undo"></i> Undo
                                        </button>
                                    </div>
                                    <div class="btn-group btn-group-sm" dropdown>
                                        <button type="button" ng-disabled="mobilityorders.isEditing" class="btn btn-primary dropdown-toggle" dropdown-toggle>
                                            <i class="fa fa-gears"></i> Actions <span class="caret"></span>
                                        </button>                                        
                                        <ul class="dropdown-menu" role="menu">
                                            <li ng-click="mobilityorders.links.addNewWOTemplate()"><a href="#"><i class="fa fa-fw fa-plus-circle"></i> Add WO Template</a></li>
                                            <li ng-click="mobilityorders.links.removeNewWOTemplate()"><a href="#"><i class="fa fa-fw fa-minus-circle"></i> Remove WO Template</a></li>
                                        </ul>    
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>   

                    <div class="row">
                        <div class="col-md-12">
                            <div  ui-grid="mobilityorders.gridOptionsNewWOTemplateTable" 
                                  ui-grid-exporter ui-grid-cellNav ui-grid-edit ui-grid-row-edit ui-grid-selection ui-grid-resize-columns ui-grid-auto-resize class="LinksTableUIGrid"></div>
                        </div> 
                    </div>
                    
                    
                </div>
 

            </div>             
        </div>
    </div>
</div> <!-- Mobility Search Details -->

