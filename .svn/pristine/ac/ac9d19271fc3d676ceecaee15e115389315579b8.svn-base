<!-- Mobility Search Details -->
<div class="row">
    <div class="panel panel-default app-panel">
        <div class="panel-heading app-panel-heading">
            <div class="app-panel-title">
                <span class="app-panel-header">Mobility Order Details</span>
            </div>
        </div>

        <div class="panel-body">

            <div class="row" style="padding-left: 15px; padding-right: 15px;">
                
             
                

                <div class="col-md-12">
                    <div style="border-bottom: solid; border-width: 1px; color: #9C9C9C; margin-bottom: 20px;"></div> 
                    
                        <div style="width:auto; height:85px" ui-grid="mobilityorders.gridOptionsSelectedWO" ui-grid-edit ui-grid-selection>
                        </div> 
                               
                    <div>
                        <div class="panel-heading sub-panel-heading">
                            <div class="sub-panel-title">
                                <span class="sub-panel-header">Task List</span>
                                <form class="form-inline" style="display: inline; padding-left: 5px;">
                                    <div class="form-group pull-right" style="margin-top: 3px; padding-right: 10px; margin-right: 85px;">
                                        <button href='javascript:void(0);' ng-disabled="true" class='btn btn-orange btn-sm'  ng-click="mobilityorders.tasklist.saveTasks()">Save</button>
                                        <button class="btn btn app-btn-dark btn-sm" ng-disabled="true" ng-click="ruleadmin.saveState()">Cancel</button>
                                        <button href='javascript:void(0);' class='btn btn-blue btn-sm' ng-click="mobilityorders.tasklist.addTask()" data-toggle="modal" data-target="#addTaskModal">Add Task</button>
                                        <button href='javascript:void(0);' class='btn btn-danger btn-sm'  ng-click="mobilityorders.tasklist.removeTask()">Remove Task</button>
                                        <button href='javascript:void(0);' class='btn btn-success btn-sm' ng-click="mobilityorders.tasklist.export()">
                                            <i class="fa fa-file-excel-o fa-lg"></i>Export
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>                             
                    </div>
                    <div class="row">
                        <div class="col-md-11">
                            <div  ui-grid="mobilityorders.gridOptionsTaskListTable" 
                                  ui-grid-cellNav ui-grid-edit ui-grid-row-edit ui-grid-selection 
                                  ui-grid-resize-columns ui-grid-auto-resize class="tasksTasksListUIGrid"></div>
                            <!--<div  ui-grid="mobilityorders.gridOptionsTaskListTable" ui-grid-selection class="tasksTasksListUIGrid"></div> -->
                        </div>
                        <div class="col-md-1">
                            <div class="btn-group-vertical" role="group" aria-label="Vertical button group" style="margin-top: 90px;">
                                <span style="font-size: 11px;">Modify Order</span>
                                <button type="button" class="btn btn-default" ng-click="mobilityorders.moveSelectedUp()" ng-disabled="mobilityorders.firstElement"><i class="fa fa-arrow-up"></i></button>
                                <button type="button" class="btn btn-default" ng-click="mobilityorders.moveSelectedDown()" ng-disabled="mobilityorders.lastElement"><i class="fa fa-arrow-down"></i></button>
                            </div>
                        </div>
                    </div>


                    <div>
                        <div class="panel-heading sub-panel-heading">
                            <div class="sub-panel-title">
                                <span class="sub-panel-header">Dynamic Workorder Attributes</span>
                                <form class="form-inline" style="display: inline; padding-left: 5px;">
                                    <div class="form-group pull-right" style="margin-top: 3px;">
                                        <button href='javascript:void(0);' class='btn btn-orange btn-sm' ng-disabled="true" ng-click="mobilityorders.saveTasks()">Save</button>
                                        <button class="btn btn app-btn-dark btn-sm" ng-disabled="true" ng-click="mobilityorders.saveState()">Cancel</button>
                                        <button href='javascript:void(0);' class='btn btn-blue btn-sm' ng-click="mobilityorders.addTaskUDA()">Add UDA</button>
                                    </div>
                                </form>
                            </div>
                        </div>   
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div  ui-grid="mobilityorders.gridOptionsUDATable" 
                                  ui-grid-cellNav ui-grid-edit ui-grid-row-edit ui-grid-selection ui-grid-resize-columns ui-grid-auto-resize class="UDATableUIGrid"></div>
                        </div> 
                    </div>

                </div>

            </div>             
        </div>
    </div>
</div> <!-- Mobility Search Details -->


<!-- Modal - Add Task Dialog -->
<div class="modal fade" id="addTaskModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close modal-button-close" data-dismiss="modal" >
            <span class="icon-ICON_X_CLOSEWINDOW"></span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Select Task to Add</h4>
      </div>
      <div id="aboutContainer" class="modal-body">
        <div ng-include="'app/admin-app/mobilityorders/views/addTask.html'"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-black" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-orange">Add</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->		