<!-- Task Search Results -->
<div class="row">
    <div class="panel panel-default app-panel">
        <div class="panel-heading app-panel-heading">
            <div class="app-panel-title">
                <span class="app-panel-header">Task Result</span>
                                        <form class="form-inline" style="display: inline; padding-left: 5px;">
                    <div class="form-group">
                      <input class="form-control" type="text"
                               ng-model="tasks.lookupFilter"
                               ng-model-options="{debounce: 300}"
                               ng-change="tasks.refreshData(tasks.lookupFilter)"
                               placeholder="Search" style="margin-top: -8px;"/>                       
                    </div>
                    <div class="form-group pull-right" style="margin-top: 3px; padding-right: 10px;">
                        <div class="btn-group btn-group-sm">
                            <button class='btn btn-orange '
                                ng-disabled="true" 
                                ng-click="tasks.saveState()">
                                <i class="fa fa-floppy-o"></i> Save
                            </button>
                            <button class="btn app-btn-dark"
                                ng-disabled="true"
                                ng-click="tasks.saveState()">
                                <i class="fa fa-undo"></i> Undo
                            </button>
                        </div>
                        
                        <div class="btn-group btn-group-sm" dropdown>
                            <button type="button" ng-disabled="mobilityorders.isEditing" class="btn btn-primary dropdown-toggle" dropdown-toggle>
                                <i class="fa fa-gears"></i> Actions <span class="caret"></span>
                            </button>                                        
                            <ul class="dropdown-menu" role="menu">
                                <li ng-click="tasks.tasklist.addTask()"><a href="#"><i class="fa fa-fw fa-plus-circle"></i> Add</a></li>
                                <li ng-class="{disabled: !tasks.selectedRow}"><a href="#"><i class="fa fa-fw fa-long-arrow-down"></i> Add Item Below</a></li>
                                <li ng-click="tasks.insertCopyAtLocation()"><a href="#"><i class="fa fa-fw fa-clipboard"></i> Copy/Add</a></li>
                                <li ng-click="tasks.taskResult.export()"><a href="#"><i class="fa fa-fw fa-file-excel-o"></i> Export</a></li>
                            </ul>
                        </div>
                        
<!--                        <button class="btn btn-success pull-right btn-sm" href="#" style="float: right; margin-left: 5px;" ng-click="tasks.taskResult.export()">
                            <i class="fa fa-file-excel-o fa-lg"></i>Export
                        </button>
                        <button class="btn btn btn-info btn-sm" ng-click="tasks.insertCopyAtLocation()" style="float: right; margin-left: 5px;">Copy/Add</button>                                
                        <button class="btn btn-blue btn-sm" ng-click="tasks.taskResult.addItem()" style="float: right;">Add</button>
                        -->
                    </div>
                </form>
            </div>
        </div>

        <div class="panel-body">

            <div class="row" style="padding-left: 15px; padding-right: 15px;">

                <div class="col-md-12">

                    <div style="border-bottom: solid; border-width: 1px; color: #9C9C9C; margin-bottom: 15px;"></div>

                    <div class="row">
                        <div class="col-md-12">
                            <div  ui-grid="tasks.gridOptions" 
                                ui-grid-exporter
                                ui-grid-cellNav 
                                ui-grid-edit 
                                ui-grid-row-edit 
                                ui-grid-selection 
                                ui-grid-resize-columns 
                                ui-grid-auto-resize
                                class="tasksTasksListUIGrid"></div>    
<!--                            <table  class="table table-striped" simple-datatable add-filter="true" add-export="true"
                      table-data="tasks.tableData"></table>-->
                        </div>                                
                    </div>
                    
                            
                    <div ng-show="tasks.displaySubtaskResults" ng-include="'app/admin-app/tasks/views/subtaskResults.html'">
                    </div>
                    
                    <!--
                    <div>
                        <div class="panel-heading sub-panel-heading">
                            <div class="sub-panel-title">
                                <span class="sub-panel-header">Subtasks for selected tasks</span>                                
                            </div>
                        </div>   
                    </div>
                    
                    <div class="row">                        
                        <div class="col-md-12">
                            <div  ui-grid="tasks.gridOptionsSubTasks" 
                                  ui-grid-cellNav ui-grid-edit ui-grid-resize-columns ui-grid-auto-resize class="subTasksGrid">
                            </div>
                        </div>                     
                    </div>
                    
                    -->
                    
                </div>

            </div>             
        </div>
    </div>
</div> <!-- Task Search Results -->
